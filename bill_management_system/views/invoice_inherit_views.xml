<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_inherit_meter" model="ir.ui.view">
        <field name="name">account.move.form.inherit.meter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="billing_month" invisible="move_type != 'out_invoice' or is_bill != True "/>
                <field name="reading_date" invisible="move_type != 'out_invoice' or is_bill != True  "/>
                <field name="issue_date" invisible="move_type != 'out_invoice'  or is_bill != True "/>
                <field name="is_bill" invisible="move_type != 'out_invoice'"/>
                <field name="meter_id" invisible="move_type != 'out_invoice'  or is_bill != True "/>
                <field name="reference_no" invisible="move_type != 'out_invoice' or is_bill != True "/>
                <field name="previous_reading_unit" invisible="move_type != 'out_invoice' or is_bill != True "/>
                <field name="mf_value" invisible="move_type != 'out_invoice' or is_bill != True "/>
                <field name="late_payment_surcharge" invisible="move_type != 'out_invoice' or is_bill != True "/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']//list//field[@name='quantity']" position="after">
                <field name="previous_reading_unit"
                       invisible="parent.move_type != 'out_invoice'  or parent.is_bill != True "/>
                <field name="next_reading_unit"
                       invisible="parent.move_type != 'out_invoice'   or parent.is_bill != True "/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/div[1]" position="after">
                <field name="complaint_mobile_number" invisible="move_type != 'out_invoice' or is_bill != True  "/>
                <field name="complaint_ptcl_number" invisible="move_type != 'out_invoice' or is_bill != True "/>
                <field widget="image" name="electric_bill_image"
                       invisible="move_type != 'out_invoice' or is_bill != True "/>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page string="Note" name="bill_notes_page"
                      invisible="move_type != 'out_invoice' or is_bill != True ">
                    <group>
                        <group>
                            <field name="bill_notes" widget="html" placeholder="Terms &amp; Conditions"/>
                            <field name="signatory_name_1" placeholder="Enter Signatory 1"/>
                        </group>
                        <group>
                            <field name="signatory_name_2" placeholder="Enter Signatory 2"/>
                            <field name="signatory_name_3" placeholder="Enter Signatory 3"/>
                        </group>
                    </group>
                </page>
            </xpath>


        </field>
    </record>

</odoo>
